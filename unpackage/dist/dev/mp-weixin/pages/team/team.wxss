.team-container {
  padding-top: 80rpx;
}
.team-container .search-input {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;
  padding: 10rpx 20rpx 20rpx;
  background: #ffffff;
  z-index: 20;
}
.team-container .team-content {
  padding-bottom: 150rpx;
}
.team-container .add-btn {
  position: fixed;
  left: 25rpx;
  bottom: 25rpx;
  width: 700rpx;
  height: 100rpx;
  background: #22C886;
  border-radius: 8rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  line-height: 100rpx;
}
.team-container .popup-teamInfo {
  position: fixed;
  left: 0;
  top: 0;
  width: 750rpx;
  z-index: 30;
}
.team-container .popup-teamInfo .popup-content {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 500rpx;
  min-height: 550rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 18rpx 1rpx rgba(0, 0, 0, 0.09);
  border-radius: 20rpx;
  padding: 0 52rpx;
  box-sizing: border-box;
}
.team-container .popup-teamInfo .popup-content .pop-img {
  display: block;
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: -58rpx auto 0;
}
.team-container .popup-teamInfo .popup-content .name {
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #343434;
  line-height: 34rpx;
  height: 34rpx;
  margin: 20rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.team-container .popup-teamInfo .popup-content .tel {
  display: block;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  line-height: 20rpx;
  margin-bottom: 48rpx;
}
.team-container .popup-teamInfo .popup-content .text {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #2DB47E;
  line-height: 32rpx;
  height: 32rpx;
  margin-bottom: 36rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.team-container .popup-teamInfo .popup-content .edit {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  margin-left: 12rpx;
}
.team-container .popup-teamInfo .popup-content .guide {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  margin-left: 12rpx;
}

