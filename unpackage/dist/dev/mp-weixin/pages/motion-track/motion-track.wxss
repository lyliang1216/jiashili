.map-cover {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 664rpx;
  background: #FFFFFF;
  box-shadow: 0 0 9rpx 2rpx rgba(108, 108, 108, 0.2);
  border-radius: 4rpx;
}
.map-cover .title {
  margin-left: 34rpx;
  padding-top: 20rpx;
  font-size: 30rpx;
  line-height: 28rpx;
  height: 28rpx;
  font-weight: 500;
  color: #333333;
}
.map-cover .date {
  margin: 35rpx 45rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #BFBFBF;
}
.map-cover .date .date-item {
  width: 50rpx;
}
.map-cover .date .date-item .week {
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  text-align: center;
  line-height: 24rpx;
  height: 24rpx;
  margin-bottom: 14rpx;
}
.map-cover .date .date-item .day {
  width: 50rpx;
  height: 50rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 50rpx;
  color: #333333;
  text-align: center;
}
.map-cover .date .date-item .day.active {
  background: #18B17F;
  border-radius: 50%;
  overflow: hidden;
  color: #ffffff;
}
.map-cover .records {
  margin: 0 45rpx 0;
  width: 660rpx;
  height: 460rpx;
  overflow: hidden;
}
.map-cover .records .records-item {
  padding-bottom: 25rpx;
  margin-top: 15rpx;
  border-bottom: 1rpx solid #BFBFBF;
}
.map-cover .records .records-item:last-child {
  border: 0;
}
.map-cover .records .records-item .item {
  line-height: 50rpx;
  font-size: 24rpx;
  color: #666666;
}

