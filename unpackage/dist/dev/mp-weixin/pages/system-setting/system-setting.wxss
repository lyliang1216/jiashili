page {
  background: #f4f4f4;
}
.system-container .page-setting {
  margin: 44rpx 0 11rpx;
}
.system-container .page-setting .title {
  font-size: 20rpx;
  color: #343434;
  margin-left: 24rpx;
  margin-bottom: 8rpx;
}
.system-container .page-setting .row {
  padding: 0 24rpx;
  height: 70rpx;
  background: #ffffff;
}
.system-container .page-setting .row .text {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #343434;
}
.system-container .page-setting .row .text-right {
  font-size: 24rpx;
  line-height: 30rpx;
  color: #666666;
}
.system-container .page-setting .row .text-right.underline {
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  border-bottom: 3rpx solid #666666;
}
.system-container .page-setting .row.sys-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-top: 1rpx solid #DBDBDB;
  border-bottom: 1rpx solid #DBDBDB;
}
.system-container .page-setting .row.noborder {
  border: 0;
}
.system-container .page-setting .row.slider-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.system-container .page-setting .row.slider-box .up {
  display: block;
  width: 32rpx;
  height: 38rpx;
}
.system-container .page-setting .row.slider-box .slider-block {
  width: 640rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
}
.system-container .page-setting .row.slider-box .down {
  display: block;
  width: 32rpx;
  height: 38rpx;
}

